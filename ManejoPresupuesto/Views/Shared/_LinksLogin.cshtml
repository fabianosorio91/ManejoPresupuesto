@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SingInManager

<ul class="navbar-nav">
    @if (SingInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class=" nav-link text-dark">Hola, @User.Identity.Name</span>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-action="logout" asp-controller="usuarios">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Registro" asp-controller="usuarios">
                Registro
            </a>
        </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-action="Login" asp-controller="usuarios">
                    Login
                </a>
            </li>
    }

</ul>